			cntr = "Videos";
			break;
		case "Artigo":
			cntr = "Artigos";
			break;
		case "Blog":
			cntr = "Blog";
			break;
		case "Noticias":
			cntr = "Noticias";
			break;
	}
}

	  <!-- TESTE ARTIGO BEGIN-->
        	<div class="article_body">
			
