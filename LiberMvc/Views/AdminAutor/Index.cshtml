@model IEnumerable<LiberMvc.Models.Autor>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Nome
        </th>
        <th>
            Descricao
        </th>
        <th>
            Pessoa
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pessoa.Nome)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AutorID }) |
            @Html.ActionLink("Details", "Details", new { id=item.AutorID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AutorID })
        </td>
    </tr>
}

</table>
