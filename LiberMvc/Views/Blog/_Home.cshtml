@*@{
	Layout = null;
}*@
@using LiberMvc.Models
@model IEnumerable<Postagem>

<!-- BLOG BEGIN -->
<div class="panel" id="blog">
	<h1>Blog</h1>

	@{ foreach (var blog in Model) { 
	<div class="article_resume">
        <p class="general_informations">
		    <span class="date">@blog.PublicadoEm.ToShortDateString()</span><br />
		    @Html.ActionLink(blog.Titulo, "Details", "Postagem", new { id = blog.PostagemID, title = blog.Titulo }, null)
        </p>
	</div>
	 } }

	<p class="actions">
		@Html.ActionLink("Ir para o blog", "Index", "Blog", null, new { @class = "button" })
		<br class="clear" />
	</p>
</div>
<!-- BLOG END -->

