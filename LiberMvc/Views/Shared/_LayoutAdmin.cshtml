<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:og="http://ogp.me/ns#" xmlns:fb="http://www.facebook.com/2008/fbml">

<head>
	<title>@((ViewBag.Title != null) ? ViewBag.Title + " | " : "") Libertários - LIBER | O Partido da Liberdade</title>

	<meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
	<meta property="og:site_name" content="Libertários - LIBER | O Partido da Liberdade" />

	<link href="@Url.Content("~/favicon.ico")" rel="shortcut icon" />

	@Helper.Css("styles/menu.css", Url)
	@Helper.Css("styles/forms.css", Url)
	@Helper.Css("styles/default.css", Url)
	@Helper.Css("styles/slides.css", Url)

	@Helper.Script("jquery-1.7.1.min.js", Url)
	@* unobstrusive carregada aqui p/ login funcionar *@
	@Helper.Script("jquery.validate.min.js", Url)
	@Helper.Script("jquery.unobtrusive-ajax.min.js", Url)
	@Helper.Script("jquery.validate.unobtrusive.min.js", Url)

	<script src="http://connect.facebook.net/pt_BR/all.js#xfbml=1" type="text/javascript"></script>

	<script type="text/javascript">

		var _gaq = _gaq || [];
		_gaq.push(['_setAccount', 'UA-5014226-4']);
		_gaq.push(['_trackPageview']);

		(function () {
			var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
			ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
			var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
		})();

	</script>

	@RenderSection("HeadContent", required: false)

</head>
<body>
	<div id="wrapper">

		<!-- HEADER BEGIN -->
		<div id="header_wrapper">
			<div id="header">
				<div id="logo">
				</div>
				<div id="name">
					<a name="Topo">
						<h1>Libertários</h1>
					</a>
				</div>

				<!-- NAVIGATION BAR BEGIN -->
				<div class="navigation">
					@Html.Partial("_TopMenuAdmin")
				</div>
				<!-- NAVIGATION BAR END -->

				<br class="clear" />
			</div>
		</div>
		<!-- HEADER END -->

		<!-- CONTENT BEGIN -->
		<div id="content_wrapper">
			<div id="content">

				<!-- MAIN CONTENT BEGIN -->
				<div id="main_content">
					@RenderBody()
				</div>
				<!-- MAIN CONTENT END -->

				<!-- SIDE BAR BEGIN -->
				<div id="side_bar">
						@RenderSection("RightContent", required: false)
				</div>
				<!-- SIDE BAR END -->

				<br class="clear" />
			</div>
		</div>
		<!-- CONTENT END -->

		<!-- FOOTER BEGIN -->
		<div id="footer_wrapper">
			<div id="footer">
				@Html.Partial("_BottomMenuAdmin")
				<br class="clear" />
			</div>
		</div>
		<!-- FOOTER END -->

	</div>
</body>
</html>