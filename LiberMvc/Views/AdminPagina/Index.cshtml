@model IEnumerable<LiberMvc.Models.Pagina>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Titulo
        </th>
        <th>
            Conteudo
        </th>
        <th>
            Publicado
        </th>
        <th>
            CriadoEm
        </th>
        <th>
            Menu
        </th>
        <th>
            isEditorOrAdmin
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Conteudo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Publicado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CriadoEm)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Menu.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isEditorOrAdmin)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PaginaID }) |
            @Html.ActionLink("Details", "Details", new { id=item.PaginaID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PaginaID })
        </td>
    </tr>
}

</table>
