@model LiberMvc.Models.Pagina
@{
	ViewBag.Title = "Nova postagem";
	//Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@Helper.Script("tinymce/jscripts/tiny_mce/tiny_mce.js", Url)
@Helper.Script("textedit.js", Url)
<div class="panel">
	<h1>@ViewBag.Title</h1>
	<div id="editor-form">
		@{ Html.EnableClientValidation(); }
		@using (Html.BeginForm())
	{
			@Html.ValidationSummary(true)
			<div class="editor-label">
				@Html.LabelFor(model => model.Titulo)
			</div>
			<div class="editor-field">
				@Html.EditorFor(model => model.Titulo)
				@Html.ValidationMessageFor(model => model.Titulo)
			</div>

			<div class="editor-label">
				@Html.LabelFor(model => model.Conteudo)
			</div>
			<div class="editor-field">
				@Html.EditorFor(model => model.Conteudo)
				@Html.ValidationMessageFor(model => model.Conteudo)
			</div>
			
			<div class="editor-label">
				@Html.LabelFor(model => model.Publicado)
			</div>
			<div class="editor-field">
				@Html.EditorFor(model => model.Publicado)
				@Html.ValidationMessageFor(model => model.Publicado)
			</div>

			<div class="editor-label">
				@Html.LabelFor(model => model.CriadoEm)
			</div>
			<div class="editor-field">
				@Html.EditorFor(model => model.CriadoEm)
				@Html.ValidationMessageFor(model => model.CriadoEm)
			</div>

			<div class="editor-label">
				@Html.LabelFor(model => model.Link)
			</div>
			<div class="editor-field">
				@Html.EditorFor(model => model.Link)
				@Html.ValidationMessageFor(model => model.Link)
			</div>
		
			<p class="actions">
				<input type="submit" value="Enviar" class="button" />
				@Html.ActionLink("Voltar a Lista", "Index", null, new { @class = "button" })
				<br class="clear" />
			</p>
	}
	</div>
</div>
@section HeadContent {
	@Helper.Script("jquery-ui-1.8.5.custom.min.js", Url)
	@Helper.Script("jquery.ui.datepicker-pt-BR.js", Url)
	@Helper.Css("ui-darkness/jquery-ui-1.8.5.custom.css", Url)
	<script type="text/javascript">
		$(function () {
			$(".datePicker").datepicker();

			$("input[type=submit]").click(function () {
				tinyMCE.triggerSave();
				//$("form").submit();
			});
		});
	</script>
}
@section RightContent {
	@Html.Partial("_RightMenu")
}
