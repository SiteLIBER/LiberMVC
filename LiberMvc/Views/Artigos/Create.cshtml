@model LiberMvc.Models.Artigo


	<div class="panel">
		<h1>Novo artigo</h1>
		<div id="editor-form">
			@{ Html.EnableClientValidation(); }
			@using (Html.BeginForm())
	 {
			@Html.ValidationSummary(true)
			@Html.EditorForModel("Artigo")
			<p class="actions">
				<input type="submit" value="Enviar" class="button" />
				@Html.ActionLink("Voltar a Lista", "Index", null, new { @class = "button" })
				<br class="clear" />
			</p>
	 } 
		</div>
	</div>



@section HeadContent {

	@Helper.Script("tinymce/jscripts/tiny_mce/tiny_mce.js", Url)
	@Helper.Script("textedit.js", Url)
	@Helper.Script("jquery-ui-1.8.5.custom.min.js", Url)
	@Helper.Script("jquery.ui.datepicker-pt-BR.js", Url)

	@Helper.Content("ui-darkness/jquery-ui-1.8.5.custom.css", Url)

	<script type="text/javascript">
	    $(function () {
	        $(".datePicker").datepicker();
	    });
	</script>

}

@section RightContent {

	 @Html.Partial("_RightMenu") 

}